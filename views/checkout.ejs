<!DOCTYPE html>
<html lang="en">

  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>The Midnight Soirée</title>

    <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css">

    <link rel="icon" href="/images/favicon.ico" type="image/gif" sizes="16x16">

    <link rel="stylesheet" href="/css/style.css">

    </head>
    
    <body onload="loadCheckout()">
    
    <!-- ***** Preloader Start ***** -->
    <div id="js-preloader" class="js-preloader">
      <div class="preloader-inner">
        <span class="dot"></span>
        <div class="dots">
          <span></span>
          <span></span>
          <span></span>
        </div>
      </div>
    </div>
    <!-- ***** Preloader End ***** -->
    
    
    <!-- ***** Header Area Start ***** -->
    <header class="header-area header-sticky">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="main-nav">
                        <!-- ***** Logo Start ***** -->
                        <a href="/" class="logo">The Midnight <em class="soiree"><i> Soirée</i></em></a>
                        <!-- ***** Logo End ***** -->
                        <!-- ***** Menu Start ***** -->
                        <ul class="nav">
                            <li><a href="/">Home</a></li>
                            <li><a href="/products">Products</a></li>
                            <li><a href="/checkout">Checkout <span id="cartCount"></span></a></li>
                            <li><a href="/about">About Us</a></li>
                            <li><a target="_blank" href="https://instagram.com/themidnightsoiree_?igshid=1dosai1irwoya">Instagram</a></li> 
                            <li><a href="/contact">Contact</a></li>  
                        </ul>        
                        <a class='menu-trigger'>
                            <span>Menu</span>
                        </a>
                        <!-- ***** Menu End ***** -->
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <!-- ***** Header Area End ***** -->

    <section class="section section-bg" id="call-to-action">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 offset-lg-1">
                    <div class="cta-content">
                        <br>
                        <br>
                        <h2>Easy Checkout</h2>
                        <p>Thank you for choosing our products</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="section">
        <div class="container">
            <br>
            <br>
            <div class="row">
                <div class="col-md-6">
                    <div class="contact-form">
                        <form id="contact" action="/checkout" method="POST">
                           <div class="row">
                                <div class="col-sm-6 col-xs-12">
                                     <label>Title:</label>
                                     <select data-msg-required="This field is required." name="title" required>
                                          <option value="">-- Choose --</option>
                                          <option value="dr">Dr.</option>
                                          <option value="miss">Miss</option>
                                          <option value="mr">Mr.</option>
                                          <option value="mrs">Mrs.</option>
                                          <option value="ms">Ms.</option>
                                          <option value="other">Other</option>
                                          <option value="prof">Prof.</option>
                                          <option value="rev">Rev.</option>
                                     </select>
                                </div>
                                <div class="col-sm-6 col-xs-12">
                                     <label>Name:</label>
                                     <input type="text" name="name" value="" required>
                                </div>
                           </div>
                           <div class="row">
                                <div class="col-sm-6 col-xs-12">
                                     <label>Email:</label>
                                     <input type="email" name="email" value="" required>
                                </div>
                                <div class="col-sm-6 col-xs-12">
                                     <label>Phone:</label>
                                     <input type="text" name="phone" value="" required>
                                </div>
                           </div>
                           <div class="row">
                                <div class="col-sm-6 col-xs-12">
                                     <label>Address line 1:</label>
                                     <input type="text" name="address1" value="" required>
                                </div>
                                <div class="col-sm-6 col-xs-12">
                                     <label>Address line 2:</label>
                                     <input type="text" name="address2" value="" required>
                                </div>
                           </div>
                           <div class="row">
                                <div class="col-sm-6 col-xs-12">
                                     <label>City:</label>
                                     <input type="text" name="city" value="" required>
                                </div>
                                <div class="col-sm-6 col-xs-12">
                                     <label>State:</label>
                                     <input type="text" name="state" value="" required>
                                </div>
                           </div>
                           <div class="row">
                                <div class="col-sm-6 col-xs-12">
                                     <label>Zip:</label>
                                     <input type="text" name="zip" value="" required>
                                </div>
                                <div class="col-sm-6 col-xs-12">
                                    <label>Payment method</label>
                                     
                                    <select name="paymentMethod" required>
                                         <option value="">-- Choose --</option>
                                         <option value="UPI">UPI</option>
                                         <option value="PAYTM">PayTM</option>
                                    </select>
                                </div>
                           </div>
                            
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="float-right">
                                        <button onclick="submitOrder()">Place Order ></button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>

                    <br>
                </div>

                <div class="col-md-6">
                    <ul class="list-group list-group-no-border">

                        <li class="list-group-item" style="margin:0 0 -1px">
                        
                            <div class="row">
                                <div class="col-1">
                                </div>
                               <div class="col-5 smallFont">
                                   <span>Name</span>
                               </div>
                               <div class="col-2 smallFont">
                                    <span>Quantity</h4>
                               </div>
                               <div class="col-3 smallFont" style="text-align: right;">
                                   <span>Price</span>
                               </div>
   
                            </div>
                        </li>

                        <div id="itemsList">
                            
                        </div>
                      
                      <li class="list-group-item" style="margin:0 0 -1px">
                        
                         <div class="row">
                            <div class="col-6">
                                <h4><strong>Total</strong></h4>
                            </div>

                            <div class="col-6">
                                <h4 class="text-right" id="totalPrice"></h4>
                            </div>

                         </div>
                      </li>

                    </ul>

                    <br>

                    <p>Note : Extra shipping charges may apply according to your region.</p>
                </div>
            </div>
        </div>
    </section>

<%- include('partials/footer') %> 