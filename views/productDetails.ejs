<%- include('partials/header') %> 

    <!-- ***** Call to Action Start ***** -->
    <section class="section section-bg" id="call-to-action">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 offset-lg-1">
                    <div class="cta-content">
                        <br>
                        <br>
                        <h2 class="soiree" id="nameOfProduct"><i><%= product.name %></i></h2>
                        <p id="priceOfProduct"><em><sup>â‚¹</sup><%= product.price %> </em></p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ***** Call to Action End ***** -->

    <!-- ***** Fleet Starts ***** -->
    <section class="section">
        <div class="container">
            <br>
            <br>

            <div class="row">
              <div class="col-md-6">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                  <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                  </ol>
                  <div class="carousel-inner">
                    <% if(typeof product.images[0] != "undefined"){ %>
                      <div class="carousel-item active">
                          <img class="w-100" src="data:image/<%=product.images[0].contentType%>;base64,<%=product.images[0].data.toString('base64')%>" alt="slide">
                      </div>
                    <% } %>
                    <% if(typeof product.images[1] !== "undefined"){ %>
                    <div class="carousel-item">
                      <img class="w-100" src="data:image/<%=product.images[1].contentType%>;base64,<%=product.images[1].data.toString('base64')%>" alt="slide">
                    </div>
                    <% } %>
                    <% if(typeof product.images[2] !== "undefined"){ %>
                      <div class="carousel-item">
                        <img class="w-100" src="data:image/<%=product.images[2].contentType%>;base64,<%=product.images[2].data.toString('base64')%>" alt="slide">
                      </div>
                    <% } %>
                    <% if(typeof product.images[3] !== "undefined"){ %>
                      <div class="carousel-item">
                        <img class="w-100" src="data:image/<%=product.images[3].contentType%>;base64,<%=product.images[3].data.toString('base64')%>" alt="slide">
                      </div>
                    <% } %>
                    <% if(typeof product.images[4] !== "undefined"){ %>
                      <div class="carousel-item">
                        <img class="w-100" src="data:image/<%=product.images[4].contentType%>;base64,<%=product.images[4].data.toString('base64')%>" alt="slide">
                      </div>
                    <% } %>
                  </div>
                  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                  </a>
                  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                  </a>
                </div>

                <br>
              </div>

              <div class="col-md-6">
                <div class="contact-form">
                    
                    <div id="idOfProduct" style="display: none;"><%= product._id %></div>
                    <div class="form-group">
                      <p><%= product.description %> </p>
                    </div>
                    
                    <label>Select Size</label>

                    <select id="sizeOfProduct">
                        <% product.sizes.split(',').forEach(function(size) { %>
                          <option value="<%= size %>"><%= size %></option>
                        <% }) %> 
                    </select>

                    <button onclick="toggleSizeChart()" class="mb-4">Size Chart</button>
                    <div id="sizeChart" style="display: none;">
                      <img src="/images/sizeChart.jpeg" class="w-100 mb-4">
                    </div>
                    <br />
                    <label>Quantity</label>

                    <input id="quantityOfProduct" type="number" value="1">

                    <label>Select Colour</label>

                    <!-- use this code if coloured boxes are to be made -->
                    <!-- <form id="colorForm">
                      <div class="colors mb-3">
                        <ul id="colorList">
                          <li>
                            <label>
                              <input type="radio" name="color" value="black">
                              <span class="swatch" style="background-color:#222"></span>
                            </label>
                          </li>
                          <li>
                            <label>
                              <input type="radio" name="color" value="blue">
                              <span class="swatch" style="background-color:#6e8cd5"></span>
                            </label>
                          </li>
                          <li>
                            <label>
                              <input type="radio" name="color" value="green">
                              <span class="swatch" style="background-color:#44c28d"></span>
                            </label>
                          </li>
                        </ul> 
                      </div> 
                    </form> -->

                    <select id="colorOfProduct">
                      <% product.colors.split(',').forEach(function(color) { %>
                        <option value="<%= color %>"><%= color %></option>
                      <% }) %> 
                    </select>

                    <div class="form-group">
                      <p>Note : <%= product.instruction %> </p>
                    </div>
                    
                    <div class="main-button2">
                        <button id="addToCart" onclick="addToCart()">Add To Cart</button>
                    </div>
                  
                </div>

                <br>
              </div>
            </div>
        </div>
    </section>
    <!-- ***** Fleet Ends ***** -->

<%- include('partials/footer') %> 